@model LoginVM

<form asp-controller="Auth" asp-action="Login" class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3 mt-3">

    <div>


        <div class="d-flex">
            <input asp-for="Email" type="text" class="form-control form-control-dark text-bg-dark" placeholder="Eposta" />
            <input asp-for="Password" type="password" class="form-control form-control-dark text-bg-dark ms-3" placeholder="Şifre" />

            <button type="submit" class="btn btn-warning ms-2">Giriş</button>
            <button id="btnGirisIptal" type="button" class="btn btn-outline-danger ms-2">İptal</button>

        </div>
    </div>

</form>

