@model FestArtistFullDetailVM



<style>
    <style >
    .artist-list {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        margin: 0;
        padding: 0;
        list-style: none;
    }

    .artist-list li {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 20px 40px;
    }

    .artist-info {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .artist-name {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .artist-image {
        height: 120px;
        width: 120px;
        object-fit: cover;
        border-radius: 50%;
    }
</style>



<div style="margin-top:200px">


    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="#"><i class="fa fa-home"></i> Anasayfa</a>
                        <a href="#">Festival</a>
                        <span>

                                @if (Model.IsActive)
                                {
                                <p class="text-primary">
                                    Aktif Festival
                                </p>
                                }


                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Blog Details Section Begin -->
    <section class="blog-details spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog__details__content">
                        <div class="blog__details__item">
                            <div class="blog__details__item__pic set-bg" data-setbg="/images/fests/@Model.ImagePath">
                                <a href="#"><i class="fa fa-share-alt"></i></a>
                            </div>
                            <div class="blog__details__item__text">
                                <span>Music festival</span>
                                <h3>
                                    Festival : @Model.FestName
                                </h3>
                                <div class="blog__details__item__widget">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <ul>

                                                <li>Başlangıç Tarihi : Başlangıç : @Model.StartDate</li>
                                                <li>Bitiş : @Model.EndDate</li>
                                            </ul>
                                        </div>
                                        <div class="col-lg-6">
                                            <ul>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="blog__details__desc">
                            <p>
                                Açıklama @Model.Description
                            </p>

                        </div>

                        <p>Festivalde Yer Alan Sanatçılar</p>

                        <div class="blog__details__quote">

                            <ul class="artist-list">
                                    @foreach (var item in Model.Artists)
                                    {
                                    <li>
                                        <div class="artist-info">
                                            <div class="artist-name">@item.NameAndLastName</div>
                                            <img class="artist-image" src="~/images/artists/@item.ImagePath" />
                                        </div>
                                    </li>
                                    }
                            </ul>
                            <i class="fa fa-quote-right"></i>
                        </div>

                        <div class="blog__details__desc">
                            <p>

                                Yer Bilgisi : @Model.Location
                            </p>
                            <p>
                                Ülke :  @Model.CountryName , Şehir : @Model.CityName
                            </p>
                        </div>
                        <div class="blog__details__tags">
                            <a href="#">Music</a>
                            <a href="#">Festival</a>
                            <a href="#">Tinternational</a>
                            <a href="#">Event</a>
                        </div>

                        <div class="blog__details__form">
                            <div class="blog__details__form__title">
                                <h4>Yorum Yap</h4>
                            </div>
                            <form method="post" asp-controller="Fest" asp-action="Comment">
                                <div class="input__list">





                                    <input type="hidden" value="@Model.FestId" name="festId" />


                                </div>
                                <textarea name="content" placeholder="Yorum"></textarea>
                                <button type="submit" class="site-btn">GÖNDER</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="blog__sidebar">
                        <div class="blog__sidebar__item">
                            <div class="blog__sidebar__title">
                                <h4>Satın Al</h4>
                            </div>
                            <p>Bilet Fiyatı : @Model.TicketPrice</p>
                            <form asp-controller="Payment" asp-action="Pay" method="get">

                                <input type="hidden" name="festId" value="@Model.FestId" />

                                <button type="submit" class="site-btn">Ödeme Yap</button>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

</div>


<!-- Blog Details Section End -->
<!-- Footer Section Begin -->
<footer class="footer footer--normal spad set-bg" data-setbg="img/footer-bg.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="footer__address">
                    <ul>
                        <li>
                            <i class="fa fa-phone"></i>
                            <p>Phone</p>
                            <h6>1-677-124-44227</h6>
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i>
                            <p>Email</p>
                            <h6>DJ.Music@gmail.com</h6>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 col-md-6">
                <div class="footer__social">
                    <h2>DJoz</h2>
                    <div class="footer__social__links">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 offset-lg-1 col-md-6">
                <div class="footer__newslatter">
                    <h4>Stay With me</h4>
                    <form action="#">
                        <input type="text" placeholder="Email">
                        <button type="submit"><i class="fa fa-send-o"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</footer>