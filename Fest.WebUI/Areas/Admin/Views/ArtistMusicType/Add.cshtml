@model ArtistMusicTypeAddOrUpdateVM

<div class="container" style="padding-top:40px">

    <div class="row">

        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 2px">

                <div class="card-header fw-bold fs-5" style="text-align:center">

                    <p class="text-bg-light">

                        <span>

                            @(Model.ArtistId == 0 ? "Sanatçı - Müzik Ekleme Formu" : "Sanatçı - Müzik Düzenleme Formu")

                        </span>

                    </p>
                </div>

                <div class="card-body">

                    <form method="post" asp-area="Admin" asp-controller="ArtistMusicType" asp-action="Add">



                        @if (!string.IsNullOrWhiteSpace(ViewBag.errorMessage))
                        {

                            <div class="alert alert-danger">
                                @ViewBag.errorMessage
                            </div>

                        }

                        @*<input asp-for="Id" type="hidden" />*@


                        <div class="form-group mb-2">

                            <label asp-for="ArtistId"></label>

                            <select asp-items="@(new SelectList(ViewBag.Artists,"Id","NameAndLastName"))" class="form-control" type="text"
                                    asp-for="ArtistId">

                                    <option value="" >Seçiniz...

                                    </option>
                            </select>

                            <span asp-validation-for="ArtistId" class="text-danger fw-bold"></span>



                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="MusicTypeId"></label>

                            <select asp-items="@(new SelectList(ViewBag.musicTypes,"Id","MusicName"))" class="form-control" type="text"
                                    asp-for="MusicTypeId">

                                    <option value="">Seçiniz...

                                    </option>

                            </select>

                            <span asp-validation-for="MusicTypeId" class="text-danger fw-bold"></span>



                        </div>




                        <button type="submit" class="btn btn-success mt-3 float-end">
                            @(Model.ArtistId == 0 ? "Ekle" : "Güncelle")  
                        </button>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>