@model BlogDetailVM

<div style="margin-top:120px">


    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="#"><i class="fa fa-home"></i> Home</a>
                        <a href="#">Blog</a>
                        <span>
                            
                            Blog Yazı Ve Detayları (Etkinlik - Festival)

                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="blog-details spad">

        <div class="container">

            <div class="row">

                <div class="col-lg-10">

                    <div class="blog__details__content">

                        <div class="blog__details__item">

                            <div class="blog__details__item__pic set-bg" data-setbg="/images/blogs/@Model.ImagePath">
                                <a href="#"><i class="fa fa-share-alt"></i></a>
                            </div>

                            <div class="blog__details__item__text">

                                <span>@Model.Title</span>

                                <div class="blog_details_item_widget">

                                    <div class="row">

                                        <div class="col-lg-6">

                                            <ul>
                                                <li>Yazar : <span>By Fizz</span>  </li>
                                                <li>Gönderi Tarihi : <span>@Model.CreatedDate</span> </li>
                                            </ul>

                                        </div>

                                        <div class="col-lg-6">

                                            

                                        </div>

                                    </div>

                                </div>

                            </div>


                            <div class="blog__details_desc">

                                <p>@Model.Content</p>

                            </div>

                        </div>

                    </div>

                </div>






            </div>



            <div class="blog__details__services">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="blog__details__services__title">
                            <h4>Bunlarda Hoşunuza Gidebilir</h4>
                        </div>
                    </div>
                </div>
                <div class="row">

                    @foreach (var item in ViewBag.LastDataBlogs)
                    {

                        <div class="col-lg-4 col-md-6 col-sm-6">
                            <div class="blog__details__services__item">
                                <div class="blog__details__services__item__pic">
                                    <img style="width:150px;height:200px" src="/images/blogs/@item.ImagePath" alt="">
                                </div>
                                <div class="blog__details__services__item__text">
                                    <h6><a href="#">@item.Title</a></h6>
                                    <span>@item.CreatedDate</span>

                                    <a asp-controller="Blog" asp-action="BlogDetail" asp-route-id="@item.Id" class="btn btn-sm btn-link">Devamı -->></a>

                                </div>
                            </div>
                        </div>


                    }

                    
                    
                </div>
            </div>
            <div class="blog__details__form">
                <div class="blog__details__form__title">
                    <h4>Yorum Yap</h4>
                </div>
                <form action="#">
                    <div class="input__list">
                        <input type="text" placeholder="İsim">
                        <input type="text" placeholder="Soyisim">
                        <input type="text" placeholder="E-Posta">
                    </div>
                    <textarea placeholder="Yorum"></textarea>
                    <button type="submit" class="site-btn">GÖNDER</button>
                </form>
            </div>

        </div>

    </div>


</div>





<footer class="footer footer--normal spad set-bg" data-setbg="/img/footer-bg.png">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-6">
                <div class="footer__address">
                    <ul>
                        <li>
                            <i class="fa fa-phone"></i>
                            <p>Phone</p>
                            <h6>1-677-124-44227</h6>
                        </li>
                        <li>
                            <i class="fa fa-envelope"></i>
                            <p>Email</p>
                            <h6>DJ.Music@gmail.com</h6>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4 offset-lg-1 col-md-6">
                <div class="footer__social">
                    <h2>DJoz</h2>
                    <div class="footer__social__links">
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-instagram"></i></a>
                        <a href="#"><i class="fa fa-dribbble"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 offset-lg-1 col-md-6">
                <div class="footer__newslatter">
                    <h4>Stay With me</h4>
                    <form action="#">
                        <input type="text" placeholder="Email">
                        <button type="submit"><i class="fa fa-send-o"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</footer>