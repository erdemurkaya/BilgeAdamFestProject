@model FestArtistAddOrUpdateVM




<div class="container" style="padding-top:40px">

    <div class="row">

        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 2px">

                <div class="card-header fw-bold fs-5" style="text-align:center">

                    @(Model.FestId == 0 ? "Festival - Sanatçı Ekleme Formu" : "Festival - Sanatçı Düzenleme Formu")
                </div>

                <div class="card-body">

                    <form method="post" asp-area="Admin" asp-controller="FestArtist" asp-action="Add">



                        @*@if (!string.IsNullOrWhiteSpace(ViewBag.errorMessage))
                        {

                        <div class="alert alert-danger">
                        @ViewBag.errorMessage
                        </div>

                        }*@

                        @*<input asp-for="Id" type="hidden" />*@



                        <div class="form-group mb-2">

                            <label asp-for="FestId"></label>

                            <select asp-items="@(new SelectList(ViewBag.fests,"Id","FestName"))" class="form-control" type="text"
                                    asp-for="FestId">

                                <option value="">
                                    Seçiniz...
                                </option>
                            </select>

                            <span asp-validation-for="FestId" class="text-danger fw-bold"></span>



                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="ArtistId"></label>

                            <select asp-items="@(new SelectList(ViewBag.Artists,"Id","NameAndLastName"))" class="form-control" type="text"
                                    asp-for="ArtistId">

                                <option value="">
                                    Seçiniz...
                                </option>
                            </select>

                            <span asp-validation-for="ArtistId" class="text-danger fw-bold"></span>



                        </div>






                        <button type="submit" class="btn btn-success mt-3 float-end">
                            @(Model.FestId == 0 ? "Ekle" : "Güncelle")  
                        </button>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>