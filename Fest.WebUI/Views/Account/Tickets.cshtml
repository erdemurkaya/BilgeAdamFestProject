@using System.Globalization;
@model List<TicketUserInfoVM>


<style>

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        height: 100vh;
        display: grid;
        font-family: 'Sitka Text',cursive;
        background: #d83565;
        color: black;
        font-size: 14px;
        letter-spacing: 0.1em;
    }

    .ticket {
        margin: auto;
        display: flex;
        background: white;
        box-shadow: rgba(0,0,0,0.3) 0px 19px 38px, rgba(0,0,0,0.22) 0px 15px 12px;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        max-width: 800px; /* istediğiniz genişliği belirleyebilirsiniz */
        margin: 20px auto; /* istediğiniz boşluğu belirleyebilirsiniz */
        padding: 20px;
        box-sizing: border-box;
        border: 2px solid black;
        border-radius: 10px;
    }

    .left {
        display: flex;
    }

    .image {
        height: 400px;
        width: 250px;
        background-size: contain;
        opacity: 0.85;
    }

    .admit-one {
        position: absolute;
        color: darkgray;
        height: 250px;
        padding: 0 10px;
        letter-spacing: 0.15em;
        text-align: center;
        justify-content: space-around;
        writing-mode: vertical-rl;
        transform: rotate(-180deg);
    }

        .admit-one span:nth-child(2) {
            color: white;
            font-weight: 700;
        }

    .left .ticket-number {
        height: 250px;
        width: 250px;
        display: flex;
        justify-content: flex-end;
        align-items: flex-end;
        padding: 5px;
    }

    .ticket-info {
        padding: 10px 30px;
        display: flex;
        flex-direction: column;
        text-align: center;
        justify-content: space-between;
        align-items: center;
    }

    .date {
        border-top: 1px solid;
        padding: 5px 0;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: space-around;
    }

        .date span {
            width: 100px;
        }

            .date span:first-child {
                text-align: left;
            }


            .date span:last-child {
                text-align: right;
            }


        .date .june-29 {
            color: #d83565;
            font-size: 20px;
        }

    .show-name {
        font-size: 32px;
        font-family: Verdana, Geneva, Tahoma, sans-serif,cursive;
    }

        .show-name h1 {
            font-size: 48px;
            font-weight: 700;
            letter-spacing: 0.1em;
            color: #4a437e;
        }


    .time {
        padding: 10px;
        color: #4a437e;
        text-align: center;
        display: flex;
        flex-direction: column;
        gap: 10px;
        font-weight: 700;
    }

        .time span {
            font-weight: 400;
            color: gray;
        }

    .left time {
        font-size: 16px;
    }


    .location {
        display: flex;
        justify-content: space-around;
        align-items: center;
        width: 100%;
        padding-top: 8px;
        border-top: 1px solid gray;
    }

        .location .separator {
            font-size: 20px;
        }

    .right {
        width: 180px;
        border-left: 1px dashed #404040;
    }

        .right .admit-one {
            color: darkgray;
        }



            .right .admit-one span:nth-child(2) {
                color: gray;
            }

        .right .right-info-container {
            height: 250px;
            padding: 10px 10px 10px 35px;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            align-items: center;
        }


        .right .show-name h1 {
            font-size: 18px;
        }


    .barcode {
        height: 200px;
        width: 100px;
    }

        .barcode img {
            height: 100%;
        }


    .right .ticket-number {
        color: gray;
    }

</style>


<div style="margin-top:200px">


    <h4>Tüm Biletler</h4>

    <div class="container">




        <div class="row">



            @if (Model != null)
            {
                @foreach (var item in Model)
                {

                    <hr />




                    <div class="ticket" style="margin-bottom:100px">

                        <div class="left">

                            <div class="image" style="background-image:url(/images/fests/@item.ImagePath)">

                                @* <p class="admit-one">

                        <span>@item.FestName</span>
                        <span>@item.FestName</span>

                        </p>*@

                                <div class="ticket-number">

                                    <p>
                                        #20030220
                                    </p>

                                </div>


                            </div>

                            <div class="ticket-info">

                                <p class="date">

                                    @{

                                        var culture = new CultureInfo("tr-TR"); // Türk kültürü
                                        var monthName = item.StartDate.ToString("MMM", culture);
                                        var dayName = item.StartDate.ToString("dddd", culture);
                                    }



                                    <span>@item.StartDate.Day.ToString(dayName,culture)</span>

                                    <span class="june-29">@item.StartDate.ToString(monthName,culture)</span>

                                    <span>@item.StartDate.Year</span>

                                </p>

                                <div class="show-name">

                                    <h1>@item.FestName</h1>

                                    <h2>Olivia Rodrige</h2>

                                </div>

                                <div class="time">

                                    <p>@item.StartDate.Hour <span>arası</span> @item.EndDate.Hour</p>
                                    <p>Kapı Açılışı <span> - </span> @item.StartDate.Hour </p>

                                    <p class="location">



                                        <span class="separator"></span>

                                        <span>@item.Location</span>
                                    </p>

                                </div>


                            </div>





                        </div>



                        <div class="right">

                            <p class="admit-one">

                                @*<span>@item.FestName</span>
                        <span>@item.FestName</span>*@


                            </p>


                            <div class="right-info-container">





                                <div class="barcode">
                                    <img src="~/templates/user/img/events/qr-barcode-for-data-labeling-1257966228-0dcfa9a3fbad4721aa5717bf13953adf.jpg" />
                                </div>


                            </div>

                        </div>


                    </div>



                }
            }
            else
            {
                <p>Aktif Bir Biletiniz Bulunmamaktadır.</p>
            }


        </div>


    </div>

</div>

