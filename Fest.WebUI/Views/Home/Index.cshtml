@model List<FestListVM>


<section class="hero spad set-bg" data-setbg="/templates/user/img/maxresdefault.jpg">



    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="hero__text">
                    <span>New single</span>
                    <h1>Feel the heart beats</h1>
                    <p>
                        Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod <br />tempor
                        incididunt ut labore et dolore magna aliqua.
                    </p>
                    <a href="https://www.youtube.com/watch?v=K4DyBUG242c" class="play-btn video-popup"><i class="fa fa-play"></i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="linear__icon">
        <i class="fa fa-angle-double-down"></i>
    </div>
</section>


<section class="event spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Öne Çıkan Festivaller</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="event__slider owl-carousel">

                @foreach (var item in Model)
                {

                    <div class="col-lg-4">
                        <div class="event__item">
                            <div class="event__item__pic set-bg" data-setbg="/images/fests/@item.ImagePath">
                                <div class="tag-date">
                                    <span>
                                        @item.StartDate

                                        <a asp-controller="Fest" asp-action="Detail"></a>
                                    </span>
                                </div>
                            </div>
                            <div class="event__item__text">
                                <h4>@item.FestName</h4>
                                <p><i class="fa fa-map-marker"></i> @item.CountryName, @item.CityName</p>
                            </div>
                        </div>
                    </div>


                }





            </div>
        </div>
    </div>
</section>



<section class="youtube spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Youtube </h2>
                    <h1>Son Videolar</h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="youtube__item">

                    <div class="youtube__item__pic set-bg" data-setbg="/templates/user/img/youtube/transmission-festival-edmred.png">
                        <a href="https://www.youtube.com/watch?v=QfF_-NsLS0Q" class="play-btn video-popup"><i class="fa fa-play"></i></a>
                    </div>
                    <div class="youtube__item__text">
                        <h4>VINI VICI ▼ TRANSMISSION SYDNEY 2023: The Spirit of the Warrior</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">

                <div class="youtube__item">
                    <div class="youtube__item__pic set-bg" data-setbg="/templates/user/img/youtube/20170827-224711-rudgrcom-20149-2048px-1-1.jpg">
                        <a href="https://www.youtube.com/watch?v=ZtmIokzkeyA" class="play-btn video-popup"><i class="fa fa-play"></i></a>
                    </div>
                    <div class="youtube__item__text">
                        <h4>Armin van Buuren (full set) - Mainstage - Mysteryland 2022</h4>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="youtube__item">
                    <div class="youtube__item__pic set-bg" data-setbg="/templates/user/img/youtube/artworks-zfphf9rswtzibchy-naeqvw-t500x500.jpg">
                        <a href="https://www.youtube.com/watch?v=AQURf3JqnJY&t=350s" class="play-btn video-popup"><i class="fa fa-play"></i></a>
                    </div>
                    <div class="youtube__item__text">
                        <h4>Monolink (live) - Mayan Warrior - Burning Man 2022</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Youtube Section End -->
<!-- Countdown Section Begin -->



<section class="countdown spad set-bg" data-setbg="/templates/user/img/events/photo-credit-garth-walker-e1651084952465.jpg">


    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="countdown__text">
                    <h1>Tomorrowland 2020</h1>
                    <h4>Music festival start in</h4>
                </div>
                <div class="countdown__timer" id="countdown-time">
                    <div class="countdown__item">
                        <span>20</span>
                        <p>days</p>
                    </div>
                    <div class="countdown__item">
                        <span>45</span>
                        <p>hours</p>
                    </div>
                    <div class="countdown__item">
                        <span>18</span>
                        <p>minutes</p>
                    </div>
                    <div class="countdown__item">
                        <span>09</span>
                        <p>seconds</p>
                    </div>
                </div>
                <div class="buy__tickets">
                    <a href="#" class="primary-btn">Buy tickets</a>
                </div>
            </div>
        </div>
    </div>
</section>



