@model CityAddOrUpdateVM

<div class="container" style="padding-top:40px">

    <div class="row">

        <div class="col-md-8 offset-2">

            <div class="card" style="border:solid 2px">

                <div class="card-header fw-bold fs-5" style="text-align:center">

                    @(Model.Id==0?"Şehir Ekleme Formu":"Şehir Güncelleme Formu")
                </div>

                <div class="card-body">

                    <form method="post" asp-area="Admin" asp-controller="City" asp-action="Save">



                        @if (!string.IsNullOrWhiteSpace(ViewBag.errorMessage))
                        {

                            <div class="alert alert-danger">
                                @ViewBag.errorMessage
                            </div>

                        }

                        <input asp-for="Id" type="hidden"/>


                        <div class="form-group mb-2">

                            <label asp-for="Name"></label>

                            <input asp-for="Name" class="form-control" type="text" />

                            <span class="text-danger fw-bold" asp-validation-for="Name"></span>

                        </div>

                        <div class="form-group mb-2">

                            <label asp-for="Name"></label>

                            <select asp-items="@(new SelectList(ViewBag.countries,"Id","Name"))" class="form-control" type="text"
                                    asp-for="CountryId" >
                                   
                                    <option value="">Seçiniz...</option>
                            </select>

                            <span asp-validation-for="CountryId" class="text-danger fw-bold"></span>

                            <span class="text-danger" asp-validation-for="Name"></span>

                        </div>


                        <div class="form-group">

                            <label asp-for="Description"></label>

                            <textarea asp-for="Description" class="form-control">

                            </textarea>

                            <span asp-validation-for="Description" class="text-danger fw-bold"></span>

                        </div>

                        <button type="submit" class="btn btn-success mt-3 float-end">
                            @(Model.Id==0?"Ekle":"Güncelle")
                            </button>

                    </form>

                </div>

            </div>

        </div>

    </div>

</div>